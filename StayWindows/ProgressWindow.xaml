<Windmah:MetroWindow  xmlns:Windmah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="StayQL.StayWindows.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StayQL.StayWindows"
        mc:Ignorable="d"
        Title="ProgressWindow" Height="250" Width="700">
    <Grid Background="#FF2D2D2D">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="CurrentlyWorkingLabel" Content="aaaaaaaa" VerticalAlignment="Bottom" Foreground="White"/>
        <Label x:Name="StepsLabel" Content="1/2" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Column="1" Foreground="White"/>
        <ProgressBar x:Name="ProgressBar" Grid.Row="1" Margin="5, 0, 5, 0" Grid.ColumnSpan="2" Background="#FF2D2D2D" BorderBrush="{x:Null}"/>
    </Grid>
</Windmah:MetroWindow>
